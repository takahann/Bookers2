<div class="container">
<div class="row">
	<div class="col-xs-3">
   <%= render 'books/list', book: @book, user: @user %>
	</div>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><a><%= attachment_image_tag @user, :profile_image, class: "user-image", fallback: "no_image.jpg", size: "40x40" %></a>
						</td>
						<td><%= link_to book.title,book %></td>
					<td><%= book.body %></td>
				<td>コメント数:<%= book.book_comments.count %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
</div>
