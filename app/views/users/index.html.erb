    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <%= render 'books/list', book: @book, user: @user %>
	</div>
        <div class="col-xs-9">
          <h2>Users</h2>
          <table class="table table-hover">
            <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= attachment_image_tag user, :profile_image, class: "user-image", fallback: "no_image.jpg", size: "40x40" %>
                  </td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= link_to "Show", user_path(user.id) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
  </div>

