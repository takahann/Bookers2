<div class="container">
	<div class="row">
			<% if @model == 'user' %>
				<h2>Users search for<strong>'<%= @content %>'</strong></h2>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th colspan="3"></th>
							<th colspan="3"></th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% if @datas.any? %>
							<% @datas.each do |data| %>
								<tr class="searched-box">
									<%= link_to user_path(data) do %>
									<td class="images">
										<%= attachment_image_tag data, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
									</td>
									<% end %>
									<td class="profiles"><%= data.name %></td>
									<td><%= link_to "Show", user_path(data.id), class: "user_#{data.id}" %></td>
								</tr>
							<% end %>
						<% end %>
					</tbody>
			<% else @model == 'book' %>
				<h2>Books search for<strong>'<%= @content %>'</strong></h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
					<% if @datas.any? %>
							<% @datas.each do |data| %>
								<tr class="searched-box">
									<td class ="images">
								          <%= attachment_image_tag(data.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
								    </td>
									<td><%= link_to data.title, book_path(data.id), class: "book_#{data.id}" %></td>
										<td><%= data.body %></td>
								</tr>
							<% end %>
					<% end %>
					</tbody>
				</table>
			<% end %>
	</div>
</div>
