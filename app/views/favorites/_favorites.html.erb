
 <% if book.favorited_by?(current_user) %>
    <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
      <i class="glyphicon glyphicon-heart"><%= book.favorites.count %></i>
    <% end %>
    <% else %>
      <%= link_to book_favorites_path(book), method: :post, remote: true do %>
        <i class="glyphicon glyphicon-heart-empty"><%= book.favorites.count %></i>
      <% end %>
   <% end %>
