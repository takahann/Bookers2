<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list', book: @books, user: @user %>
		</div>

		<div class="col-xs-9">
			<h3>Book detail</h3>
			<table class="table table-striped">
				<tbody>
					<tr>
					<td>
			<%= attachment_image_tag @book.user, :profile_image, class: "user-image", fallback: "no_image.jpg", size: "40x40" %>
              <p><%= link_to  user_path(@user.id) do %>
              <%= @user.name %></p>
              <% end %>
                    </td>
					<td>
						<%= link_to @book.title,@book %>
					</td>
					<td>
					  <%= @book.body %>
					</td>
					<td>
                        <% if @book.user_id == current_user.id %>
					    <%= link_to "Edit", edit_book_path(@book.id) ,class:"btn btn-success btn-xs edit_book_#{@book.id}" %>
					</td>
					<td>
					    <%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-danger btn-xs destroy_book_#{@book.id}", "data-confirm" => "本当に削除しますか?" %>
					 </td>
				        <% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>